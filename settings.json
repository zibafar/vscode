{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true,
        "source.sortMembers": true
    },
    "files.autoSave": "onFocusChange",
    "php.suggest.basic": false,
    "php-imports.unused.enable": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/*.js": true,
        "**/*.ts": true,
        "**/*.vue": true,
        "**/*.lock": true,
        "**/*.xml": true,
    },
    "cSpell.words": [
        "attachs",
        "authed",
        "backlink",
        "displayname",
        "Doesnt",
        "Notif",
        "Queueable",
        "Spatie",
        "unfollow",
        "آیتم",
        "ارسال",
        "انتشار",
        "برای",
        "پاسخ",
        "پیوست",
        "تخفیف",
        "تسمینو",
        "تکمیل",
        "توجه",
        "توضیحات",
        "تولید",
        "جدید",
        "رپورتاژ",
        "فایل",
        "کمپین",
        "گردید",
        "گرفت",
        "لینک",
        "محتوا",
        "مدیریت",
        "مشاهده",
        "مشخصات",
        "مورد",
        "موفقیت"
    ],
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?"
}
